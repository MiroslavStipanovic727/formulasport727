<html t:type="layout" title="Prijava"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <div class="row">
        <div class="span4 offset3">
            <t:form t:id="login">
                <h3>${message:login-poruka}</h3>
                <t:label for="emailIliKIme"/>
                <t:textfield t:id="emailIliKIme" class="input-block-level" validate="required" placeholder="message:emailIliKimePlaceholder"/>
                <t:label for="sifra"/>
                <t:passwordfield t:id="sifra" class="input-block-level" validate="required" placeholder="message:sifraPlaceholder"/>
                <t:submit class="btn btn-large btn-primary" value="message:prijava-label"/>
                <t:errors/>
            </t:form>
        </div>
    </div>

</html>
